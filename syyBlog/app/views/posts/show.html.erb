<h1> <%= @post.title %> </h1>
<%= @post.text %>
<p> --------------------------------------------------------------- </p>

<h4>Comments</h4>
<% @post.comments.each do |comment| %>
	<table>
		<td><%= comment.text %> </td>
		<td><%= link_to 'Delete Comment', [@post, comment], :method => :delete, confirm: 'Are you sure? :S' %> </td>
		<td> <%= time_ago_in_words comment.created_at %> ago </td>
	</table>	
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
	<p> <%= f.text_area :text, :size=> '40x10' %> </p>
	<p> <%= f.submit 'done' %> </p>
<% end %>
<p> --------------------------------------------------------------- </p>

<p>
	<%= link_to 'Edit Post', edit_post_path(@post) %> |
	<%= link_to 'Delete Post', edit_post_path(@post), :method => :delete, :confirm => 'Are you sure? :S' %> |
	<%= link_to 'Back', posts_path %> 
</p>